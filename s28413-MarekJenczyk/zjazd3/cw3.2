#!/bin/bash

fibonacci() {
    n=$1
    if [ $n -eq 0 ] || [ $n -eq 1 ]; then
        return $n
    else
        a=$(( $n - 1 ))
        b=$(( $n - 2 ))
        fibonacci $a
        fib_a=$?
        fibonacci $b
        local fib_b=$?
        return $((fib_a + fib_b))
    fi
}

fibonacci $1
echo "Wynik: $?"
