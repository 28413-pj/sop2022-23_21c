#!/bin/bash

COLORS=(czarny='\e[0;30m' czerwony='\e[0;31m' zielony='\e[0;32m' zolty='\e[0;33m' niebieski='\e[0;34m' fioletowy='\e[0;35m' cyjan='\e[0;36m' bialy='\e[0;37m')


function color {
	for i in ${COLORS[@]}; do
		if [[ $2 == $(echo $i | sed 's/=.*//') ]]; then
			echo -e "$(echo $i | sed 's/.*=//')${1}\e[0m"
		fi
	done 
}


